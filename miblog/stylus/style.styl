@import "color.styl"

/*<editor-fold desc="Header">*/
.Header
  //background url("../img/fondo.png") no-repeat center
  background-color #F5FBFB
  background-size cover
  height 100vh
  text-align center

.Header-imageContainer
  margin 0

.Header-image
  margin-top 15em
  border-radius 50%
  width 10%

.Header-name
  color colorOrange
  font-size 2.2em
  font-weight bold

.Header-link
  color white
  text-decoration none
  font-size 1.5em
  font-weight 300

.MainMenu
  height 3.75em
  position fixed
  left 0
  right 0
  top 0
  &_contentImg
    margin 0
    padding 0
    display inline-block
    position absolute
    top 0
    left 20%
  &_logo
    width 50px
    margin 20px
    padding 0
    display inline-block
  &_name
    display inline-block
    vertical-align top
    color colorGray
    padding-top  33px
    font-weight 800



  &_list
    display inline-block
    vertical-align top
    margin-top 10px
    position absolute
    top 5px
    right 20%

  &_item
    display inline-block
  &_link
    color colorGray
    text-decoration none
    line-height 3.75em
    margin-right 1.75em
    transition all
    &:hover
      color black
      transition .500s


